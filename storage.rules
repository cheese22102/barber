rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read images (for public access)
    match /barbers/{allPaths=**} {
      allow read: if true;
      // Allow authenticated users to upload images
      allow write: if request.auth != null;
      allow delete: if request.auth != null && request.auth.token.email == 'admin@barbershop.com';
    }

    // Default deny for other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
